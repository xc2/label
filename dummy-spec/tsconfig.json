{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "rootDir": ".."
  },
  "include": ["*"],
  "exclude": ["**/*.test.*", "**/__*__/**", "**/BUILD.ts"]
}
